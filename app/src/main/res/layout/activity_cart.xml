<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="match_parent">

    <include layout="@layout/app_bar"/>

    <LinearLayout
        android:paddingBottom="4dp"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/primaryColor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <yalantis.com.sidemenu.foodies.utils.CircularImageView
            android:id="@+id/hotelImage"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:border_color="#ddd"
            app:border_width="4dp"
            app:shadow="false"
            android:scaleType="centerCrop"
            android:src="@drawable/screen"/>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:id="@+id/name"

                android:text="Hotel Name"
                android:textSize="22sp"
                android:textColor="#fff"
                android:layout_width="match_parent"

                android:layout_height="wrap_content" />




        </LinearLayout>

        <LinearLayout

            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:id="@+id/price"

                android:text="Rs. 1025"

                android:textSize="22sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="4dp"


                android:text="Total"

                android:textSize="14sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <github.chenupt.springindicator.SpringIndicator
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:siTextSize="18sp"
        app:siIndicatorColors="@array/indicator_colors"
        app:siTextColor="@color/primaryColorDark"
        app:siSelectedTextColor="@android:color/white"
        app:siIndicatorColor="@color/primaryColor"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="56dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
</LinearLayout>
